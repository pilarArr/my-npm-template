{
  "name": "my-npm-template",
  "version": "1.0.0",
  "description": "A template for creating npm packages",
  "main": "index.js",
  "scripts": {
    "build": "babel src -d build --ignore '**/*.test.js'",
    "dev": "babel src -d build --ignore '**/*.test.js' --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "prepublish": "npm run build"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.6.0",
    "eslint": "^4.8.0",
    "eslint-config-airbnb": "^16.0.0",
    "eslint-plugin-import": "^2.7.0",
    "jest": "^21.2.1",
    "np": "^2.16.0"
  },
  "babel": {
    "presets": [
      "env"
    ]
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "env": {
      "node": true
    },
    "globals": {
      "expect": false
    },
    "rules": {
      "indent": [
        "error",
        2
      ],
      "no-tabs": [
        "error"
      ],
      "no-mixed-spaces-and-tabs": [
        "error"
      ],
      "import/no-unresolved": 0,
      "import/no-extraneous-dependencies": 0,
      "import/extensions": 0,
      "no-underscore-dangle": [
        "error"
      ],
      "class-methods-use-this": 0
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pilarArr/my-npm-template.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pilarArr/my-npm-template/issues"
  },
  "homepage": "https://github.com/pilarArr/my-npm-template#readme"
}
